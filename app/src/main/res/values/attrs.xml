<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="horizontalSpacing" format="dimension" />
    <attr name="verticalSpacing" format="dimension" />
    <attr name="itemSize" format="dimension" />
    <attr name="itemColor" format="color" />
    <attr name="backgroundResource" format="reference" />
    <attr name="textPaddingH" format="dimension" />
    <attr name="textPaddingV" format="dimension" />

    <declare-styleable name="FlowLayoutAttrs">
        <attr name="horizontalSpacing" />
        <attr name="verticalSpacing" />
        <attr name="itemSize" />
        <attr name="itemColor" />
        <attr name="backgroundResource" />
        <attr name="textPaddingH" />
        <attr name="textPaddingV" />
    </declare-styleable>

    <declare-styleable name="RatingBar">
        <!--尺寸值-->
        <attr name="starImageSize" format="dimension" />
        <!--星星间距-->
        <attr name="starPadding" format="dimension" />
        <!--星星总数-->
        <attr name="starCount" format="integer" />
        <!--空白的星星资源文件值-->
        <attr name="starEmpty" format="reference" />
        <!--满星资源文件值-->
        <attr name="starFill" format="reference" />
        <!--半星资源文件值-->
        <attr name="starHalf" format="reference" />
        <!--是否可点击boolean值-->
        <attr name="clickable" format="boolean" />
        <!--当前进度float值-->
        <attr name="starStep" format="float" />
        <!--每次进度方式的值，整星还是半星-->
        <attr name="stepSize">
            <enum name="Half" value="0" />
            <enum name="Full" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AllAngleExpandableButton">
        <attr name="aebMainButtonSizeDp" format="dimension|reference" />
        <attr name="aebSubButtonSizeDp" format="dimension|reference" />
        <attr name="aebButtonGapDp" format="dimension|reference" />
        <attr name="aebStartAngleDegree" format="integer|reference" />
        <attr name="aebEndAngleDegree" format="integer|reference" />
        <attr name="aebAnimDurationMillis" format="integer|reference" />
        <attr name="aebButtonElevation" format="dimension|reference" />
        <attr name="aebMaskBackgroundColor" format="color|reference" />
        <attr name="aebIsSelectionMode" format="boolean" />
        <attr name="aebMainButtonTextColor" format="color|reference" />
        <attr name="aebSubButtonTextColor" format="color|reference" />
        <attr name="aebMainButtonTextSizeSp" format="dimension|reference" />
        <attr name="aebSubButtonTextSizeSp" format="dimension|reference" />
        <attr name="aebRippleEffect" format="boolean" />
        <attr name="aebRippleColor" format="color|reference"/>
        <attr name="aebMainButtonRotateDegree" format="integer|reference"/>
        <attr name="aebMainButtonRotateAnimDurationMillis" format="integer|reference"/>
        <attr name="aebBlurBackground" format="boolean" />
        <attr name="aebBlurRadius" format="float|reference"/>
    </declare-styleable>

    <declare-styleable name="SpecialProgressBarStyle">
        <attr name="textSize" format="dimension|reference"/><!-- 字体大小 -->
        <attr name="textColorSuccess" format="color|reference"/><!-- 成功字体颜色 -->
        <attr name="textColorNormal" format="color|reference"/><!-- 默认进度字体颜色 -->
        <attr name="textColorError" format="color|reference"/><!-- 错误失败字体颜色 -->
        <attr name="startDrawable" format="integer|reference"/><!-- 内部图片 -->
        <attr name="endSuccessDrawable" format="integer|reference"/><!-- 成功图片 -->
        <attr name="progressBarHeight" format="dimension|reference"/><!--进度条高度 -->
        <attr name="progressBarBgColor" format="color|reference"/><!--进度条背景颜色 -->
        <attr name="progressBarColor" format="color|reference"/><!--进度条颜色 -->
        <attr name="canReBackable" format="boolean|reference"/><!-- 是否成功后返回-->
        <attr name="canDragable" format="boolean|reference"/><!-- 是否可以拖拽-->
    </declare-styleable>

    <!--SideBar相关-->
    <!--普通时的颜色-->
    <attr name="normalColor" format="color"/>
    <!--选中时的颜色-->
    <attr name="chooseColor" format="color"/>
    <!--普通时的背景图-->
    <attr name="normalBackground" format="reference"/>
    <!--选中时的背景图-->
    <attr name="chooseBackground" format="reference"/>
    <!--索引栏文字大小-->
    <attr name="sideTextSize" format="dimension"/>
    <declare-styleable name="SideBar">
        <attr name="normalColor"/>
        <attr name="chooseColor"/>
        <attr name="normalBackground"/>
        <attr name="chooseBackground"/>
        <attr name="sideTextSize"/>
    </declare-styleable>

</resources>
