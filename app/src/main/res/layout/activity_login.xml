<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <LinearLayout
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="93dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:src="@drawable/phone_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/phone_number"
                android:textColor="@color/text_apha"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin">

            <EditText
                android:id="@+id/phone_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_ed"
                android:background="@null"
                android:hint="@string/input_number"
                android:inputType="number"
                android:maxLength="11"

                android:textColorHint="@color/gray"
                android:textSize="@dimen/hint_size" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="156dp"
                android:background="@color/dark_gray" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="189dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_marginLeft="@dimen/margin"
                android:src="@drawable/password_lock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/password"
                android:textColor="@color/text_apha"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout_mima">

            <Button
                android:id="@+id/login_button"
                android:layout_width="@dimen/button_below_with"
                android:layout_height="@dimen/button_below_high"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/login_shape"
                android:text="@string/login_text"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity=""
                android:gravity="right|center_vertical"
                android:paddingRight="10dp"
                android:text="@string/forget_password"
                android:textColor="@color/text_apha80"
                android:textSize="@dimen/text_size1" />

            <View
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:background="@color/gray_slate" />

            <TextView
                android:id="@+id/register"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/register_at"
                android:textColor="@color/text_apha80"
                android:textSize="@dimen/text_size1" />
        </LinearLayout>


