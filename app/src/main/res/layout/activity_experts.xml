<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/touming">
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/request_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_default_avatar"/>
    <TextView
        android:id="@+id/request_name"
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_experts_name"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="22dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/text_change"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_zhenduan"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:textStyle="normal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/hand_up_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/hand_up"/>
            <TextView
                android:id="@+id/txt"
                android:layout_toRightOf="@+id/hand_up_btn"
                android:layout_width="70dp"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/answer_btn"
                android:layout_toRightOf="@+id/txt"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/answer"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:layout_below="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hand_up_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/str_hand_up"/>
            <TextView
                android:id="@+id/txt_str"
                android:layout_toRightOf="@+id/hand_up_txt"
                android:layout_width="100dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/answer_txt"
                android:layout_toRightOf="@+id/txt_str"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="@string/str_answer"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>