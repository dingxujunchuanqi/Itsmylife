<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <EditText
            android:id="@+id/edit0"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:textColor="#ee333333"
            android:textCursorDrawable="@drawable/color_cursor" />
        <ImageView
            android:id="@+id/select_path"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/menu"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@id/edit0"
            android:layout_alignRight="@id/edit0"
            android:layout_below="@id/edit0"
            android:background="#33333333" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >
        <com.sinoautodiagnoseos.propeller.ui.specialProgressBar.SpecialProgressBarView
            android:id="@+id/ls"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:startDrawable="@drawable/ic_file_upload_white_36dp"
            app:endSuccessDrawable="@drawable/ic_done_white_36dp"
            app:textSize="12sp"
            app:textColorSuccess="#66A269"
            app:textColorNormal="#491C14"
            app:textColorError="#BC5246"
            app:progressBarHeight="4dp"
            app:progressBarBgColor="#491C14"
            app:progressBarColor="#ffffff"
            app:canReBackable="true"
            app:canDragable="false" />
    </RelativeLayout>
</LinearLayout>