<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--<item android:state_activated="false" android:drawable="@color/vertical_line_color"/>-->
    <!--<item android:state_activated="true" android:drawable="@color/btn_blue_normal"/>-->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/vertical_line_color" />
            <corners android:radius="5dip" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <solid android:color="@color/vertical_line_color" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="5dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_blue_normal" />
            <corners android:radius="5dip" />
        </shape>
    </item>

</selector>