<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="true"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_hight">

        <FrameLayout
            android:id="@+id/back_click"
            android:layout_width="@dimen/back_width"
            android:layout_height="@dimen/view_hight">

            <ImageView
                android:layout_width="@dimen/view_hight1"
                android:layout_height="@dimen/view_hight1"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/image_marg"
                android:src="@drawable/back_button" />
        </FrameLayout>

        <TextView
            android:id="@+id/person_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/personal_centter"
            android:textColor="@color/text_apha80"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/setting_image"
            android:layout_width="@dimen/view_hight1"
            android:layout_height="@dimen/view_hight1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/image_marg"
            android:src="@drawable/setting" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />
    </RelativeLayout>
</RelativeLayout>